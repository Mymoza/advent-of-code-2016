import os
os.chdir("../resources") # Change the current directory
cwd = os.getcwd()  # Get the current working directory (cwd)
files = os.listdir(cwd)  # Get all the files in that directory

file_day1 = open("day1", "r")

where_is_santa = 0

class walker:

    direction = 90;

    x = 0;
    y = 0;

    # Change the currect direction of the walker
    def turn(self, direction):

    return direction

    def walk(self, distance):
        if direction == 0:
            x += distance
            print("Heading East")
        elif direction == 90:
            y += distance
            print("Heading North")
        elif direction == 180:
            x -= distance
            print("Heading West")
        elif direction == 270:
            y -= distance
            print("Heading South" y)




with file_day1 as f:
while True:
c = f.read(1)
if not c:
    print "End of file"
    break
if c == "L":
    where_is_santa = where_is_santa +1
elif "R" == c:
    where_is_santa = where_is_santa - 1

file_day1.close()

print "santa is at floor", where_is_santa
